{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1 class="text-center">Seats list</h1>
    <br>

    <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
    <table class="table text-center">
        <thead>
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Number</th>
                <th class="text-center">Student</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seat in seats %}
            <tr>
                <td>{{ seat.id }}</td>
                <td>{{ seat.number }}</td>
                {% if seat.seatStudent is not null %}
                    <td>{{ seat.seatStudent.firstname }} {{ seat.seatStudent.name }}</td>
                {% else %}
                    <td>No student</td>
                {% endif %}
                <td>
                    <ul class="list-unstyled list-inline">
                        <li>
                            <a class="btn btn-default" href="{{ path('seat_show', { 'id': seat.id }) }}">show</a>
                        </li>
                        <li>
                            <a class="btn btn-default" href="{{ path('seat_edit', { 'id': seat.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </div>
</div>
{% endblock %}
