{% extends 'base.html.twig' %}

{% block body %}
    <h1>Seat</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ seat.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ seat.number }}</td>
            </tr>
            <tr>
                <th>Student</th>
                {% if seat.seatStudent is not null %}
                <td>{{ seat.seatStudent.firstname }} {{ seat.seatStudent.name }}</td>
                {% else %}
                    <td>No student in this place.
                    <a href="{{ path('seat_show', { 'id': seat.id }) }}/assign/student">New student</a>
                    </td>
                {% endif %}
            </tr>
        </tbody>
    </table>

    {% for trs in seat.seatStudent %}
      <p>{{ trs.name }}</p>
    {% endfor %}


    <ul>
        <li>
            <a href="{{ path('seat_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('seat_edit', { 'id': seat.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
