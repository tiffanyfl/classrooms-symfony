{% extends 'base.html.twig' %}

{% block body %}
    <h1>Classroom</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ classroom.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ classroom.name }}</td>
            </tr>
            <tr>
                <th>Seat</th>
                <td>{{ classroom.nbseats }}</td>
            </tr>
            <tr>
                <th>Speaker</th>
                {% if classroom.speaker is not null %}
                <td>{{ classroom.speaker.name }}
                <a href="{{ path('classroom_show', { 'id': classroom.id }) }}/assign/speaker">Change speaker</a>
                </td>
                {% else %}
                    <td>No speaker for this class. Would you like to assign one ?
                    <a href="{{ path('classroom_show', { 'id': classroom.id }) }}/assign/speaker">New speaker</a>
                    </td>
                {% endif %}
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('classroom_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('classroom_edit', { 'id': classroom.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
