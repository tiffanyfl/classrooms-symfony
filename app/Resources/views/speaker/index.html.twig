{% extends 'base.html.twig' %}

{% block body %}
    <h1>Speakers list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Firstame</th>
                <th>Subject</th>
                <th>classroom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for speaker in speakers %}
            <tr>
                <td><a href="{{ path('speaker_show', { 'id': speaker.id }) }}">{{ speaker.id }}</a></td>
                <td>{{ speaker.name }}</td>
                <td>{{ speaker.firstname }}</td>
                <td>{{ speaker.subject }}</td>
                {% if speaker.classroom is not null %}
                    <td>{{ speaker.classroom.name }}</td>
                {% else %}
                    <td>No classroom</td>
                {% endif %}
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('speaker_show', { 'id': speaker.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('speaker_edit', { 'id': speaker.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('speaker_new') }}">Create a new speaker</a>
        </li>
    </ul>
{% endblock %}
