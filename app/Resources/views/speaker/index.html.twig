{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
<div class="text-center">
    <h1>Speakers list</h1>
    <ul class="list-unstyled list-inline">
        <li>
            <a class="btn btn-default" href="{{ path('speaker_new') }}">Create a new speaker</a>
        </li>
    </ul>
</div>
<br>

<div class="row">
<div class="col-md-3"></div>
<div class="col-md-6">
    <table class="table text-center">
        <thead>
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Firstame</th>
                <th class="text-center">Name</th>
                <th class="text-center">Subject</th>
                <th class="text-center">classroom</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for speaker in speakers %}
            <tr>
                <td>{{ speaker.id }}</td>
                <td>{{ speaker.firstname }}</td>
                <td>{{ speaker.name }}</td>
                <td>{{ speaker.subject }}</td>
                {% if speaker.classroom is not null %}
                    <td>{{ speaker.classroom.name }}</td>
                {% else %}
                    <td>No classroom</td>
                {% endif %}
                <td>
                    <ul class="list-unstyled list-inline">
                        <li>
                            <a class="btn btn-default" href="{{ path('speaker_show', { 'id': speaker.id }) }}">show</a>
                        </li>
                        <li>
                            <a class="btn btn-default" href="{{ path('speaker_edit', { 'id': speaker.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  </div>
  </div>

</div>
{% endblock %}
