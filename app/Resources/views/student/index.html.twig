{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
<div class="text-center">
    <h1>Students list</h1>
    <ul class="list-unstyled list-inline">
        <li>
            <a class="btn btn-default" href="{{ path('student_new') }}">Create a new student</a>
        </li>
    </ul>
  </div>
<br>

  <div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <table class="table text-center">
        <thead>
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Firstname</th>
                <th class="text-center">Name</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.firstname }}</td>
                <td>{{ student.name }}</td>
                <td>
                    <ul class="list-unstyled list-inline">
                        <li>
                            <a class="btn btn-default" href="{{ path('student_show', { 'id': student.id }) }}">show</a>
                        </li>
                        <li>
                            <a class="btn btn-default" href="{{ path('student_edit', { 'id': student.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  </div>
  </div>

</div>
{% endblock %}
